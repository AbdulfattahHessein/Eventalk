<% Title = "Edit Speaker" %>

<div class="container  w-50 mt-5 mb-5">
  <form method="post" action="/speaker/edit/<%= model.id %>">
    <div class="form-group">
      <label for="firstName">First name</label>
      <input name="firstName" value="<%= model.firstName %>" id="firstName" type="text" class="form-control" placeholder="Enter type name">
    </div>
    <div class="form-group">
      <label for="lastName">Last name</label>
      <input name="lastName" value="<%= model.lastName %>" id="lastName" type="text" class="form-control" placeholder="Enter type name">
    </div>
    <div class="form-group">
      <label for="phone">Phone number</label>
      <input name="phone" value="<%= model.phone %>" id="phone" type="text" class="form-control" placeholder="Enter your phone number">
    </div>
    <div class="form-group">
      <label for="gender"> Gender </label>
      <select name="gender" id="gender" class="form-control">
        <option selected hidden value="<%= model["gender"] %>"> <%= model.gender %> </option>
        <option value="male"> Male </option>
        <option value="female"> Female </option>
      </select>
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <input name="country" value="<%= model.country %>" id="country" type="text" class="form-control" placeholder="Enter your country name">
    </div>

    <div class="form-group">
      <label for="city">City</label>
      <input name="city" value="<%= model.city %>" id="city" type="text" class="form-control" placeholder="Enter your city name">
    </div>

    <div class="form-group">
      <label for="job">job</label>
      <input name="job" value="<%= model.job %>" type="text" class="form-control" id="job" placeholder="Enter your job">
    </div>
    <div class="form-group">
      <label for="facebook">Facebook</label>
      <input name="facebook" value="<%= model.facebook %>" id="facebook" type="text" class="form-control" placeholder="Enter your city name">
    </div>
    <div class="form-group">
      <label for="linkedin">Linkedin</label>
      <input name="linkedin" value="<%= model.linkedin %>" id="linkedin" type="text" class="form-control" placeholder="Enter your city name">
    </div>
    <input type="submit" class="btn btn-primary" value="Edit">
    <a href="/speaker" class="ml-2 btn btn-secondary">Back to list</a>
  </form>
</div>
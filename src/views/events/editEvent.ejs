<% Title = "Edit Event" %>

<div class="container  w-50 mt-5 mb-5">
  <form method="post" action="/event/edit/<%= model["id"] %>">
    <div class="form-group">
      <label for="title">Title</label>
      <input name="title" value="<%= model.title %>" id="title" type="text" class="form-control" placeholder="Enter type name">
    </div>
    <div class="form-group">
      <label for="ticketPrice">Ticket price</label>
      <input name="ticketPrice" value="<%= model["ticketPrice"] %>" id=" ticketPrice" type="number" class="form-control" placeholder="Enter type name">
    </div>
    <div class="form-group">
      <label for="seats">Number of seats</label>
      <input name="seats" value="<%= model["seats"] %>" id="seats" type="number" class="form-control" placeholder="Enter number of seats">
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      <br>
      <input type="text" id="old-date" disabled hidden value="<%= model["date"]%>">
      <input name="date" value="<%= model["date"] %>" id="date" type="datetime-local" class="form-control" placeholder="Enter event's time">
    </div>
    <div class="form-group">
      <label for="topicId"> Event Type </label>
      <select name="topicId" id="topicId" class="form-control">
        <option value="<%= model["topicId"] %>" selected hidden> <%= model["topicName"] %> </option>
        <% for( let i = 0; i < topics.length; i++ ) { %>
        <option value=" <%= topics[i].id %>"> <%= topics[i].name %> </option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="speakerId"> Speaker </label>
      <select name="speakerId" id="speakerId" class="form-control">
        <option value="<%= model["speakerId"] %>" selected hidden> <%= model["speakerName"] %> </option>
        <% for( let i = 0; i < speakers.length; i++ ) { %>
        <option value="<%= speakers[i].id %>"> <%= speakers[i].name %> </option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" id="description" class="form-control" cols="30" rows="10"><%= model["description"] %></textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Edit">
    <a href="/event" class="ml-2 btn btn-secondary">back to list</a>

  </form>
</div>
<script>
  function padTo2Digits(num) {
    return num.toString().padStart(2, '0');
  }

  function formatDate(date) {
    return (
      [
        date.getFullYear(),
        padTo2Digits(date.getMonth() + 1),
        padTo2Digits(date.getDate()),
      ].join('-') +
      ' ' + [
        padTo2Digits(date.getHours()),
        padTo2Digits(date.getMinutes()),
        padTo2Digits(date.getSeconds()),
      ].join(':')
    );
  }
  const oldDate = document.getElementById('old-date');
  const date = document.getElementById('date');
  date.value = formatDate(new Date(oldDate.value));
</script>